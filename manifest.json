{
  "manifest_version": 3,
  "name": "Job Application Optimizer",
  "version": "1.0.0",
  "description": "A Chrome Extension to optimize job applications.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Optimizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/jspdf.umd.min.js", "libs/marked.min.js", "libs/purify.min.js", "libs/builtin_prompts.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}
