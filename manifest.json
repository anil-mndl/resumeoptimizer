{
  "manifest_version": 3,
  "name": "Job Application Optimizer",
  "version": "1.0.0",
  "description": "A Chrome Extension to optimize job applications.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Optimizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
